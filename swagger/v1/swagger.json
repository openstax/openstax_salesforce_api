{
  "swagger": "2.0",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/v1/lists": {
      "get": {
        "summary": "Retrieve all public mailing lists",
        "tags": [
          "Lists"
        ],
        "consumes": [
          "application/json"
        ],
        "security": [
          {
            "apiToken": [

            ]
          }
        ],
        "parameters": [
          {
            "name": "list",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "pardot_id": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "created_at": {
                  "type": "string"
                },
                "updated_at": {
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "lists retrieved"
          }
        }
      }
    },
    "/api/v1/lists/{list_id}/subscribe": {
