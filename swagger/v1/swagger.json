        "summary": "Subscribes to a mailing list",
        "tags": [
          "Lists"
        ],
        "consumes": [
          "application/json"
        ],
        "security": [
          {
            "apiToken": [

            ]
          }
        ],
        "responses": {
          "202": {
            "description": "subscribe request processing"
          }
        }
      }
    },
    "/api/v1/lists/{list_id}/unsubscribe": {
      "parameters": [
        {
          "name": "list_id",
          "in": "path",
          "type": "string",
          "required": true
        }
      ],
      "get": {
        "summary": "Unsubscribes from a mailing list",
        "tags": [
          "Lists"
        ],
        "consumes": [
          "application/json"
        ],
        "security": [
          {
            "apiToken": [

            ]
          }
        ],
        "responses": {
          "202": {
            "description": "unsubscribe request processing"
          }
        }
      }
    },
    "/api/v1/opportunities": {
      "post": {
        "summary": "Create an opportunity",
        "tags": [
          "Opportunity"
        ],
        "consumes": [
          "application/json"
        ],
        "security": [
          {
            "apiToken": [

            ]
          }
        ],
        "parameters": [
          {
            "name": "opportunity_data",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "book_name": {
                  "type": "string"
                },
                "contact_id": {
                  "type": "string"
                },
                "new": {
                  "type": "boolean"
                },
                "close_date": {
                  "type": "string"
                },
                "number_of_students": {
                  "type": "string"
                },
                "class_start_date": {
                  "type": "string"
                },
                "school_id": {
                  "type": "string"
                },
                "book_id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "stage_name": {
                  "type": "string"
                }
              },
              "required": [
                "book_name",
                "contact_id",
                "close_date",
                "number_of_students",
                "school_id",
                "stage_name"
              ]
            }
          }
        ],
        "responses": {
          "202": {
            "description": "opportunity created"
          }
        }
      }
    },
    "/api/v1/opportunities/{id}": {
      "patch": {
        "summary": "Update an opportunity",
        "tags": [
          "Opportunity"
        ],
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "apiToken": [

            ]
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "name": "opportunity_data",
            "in": "body",
            "schema": {
              "salesforce_id": {
                "type": "string"
              },
              "term_year": {
                "type": "string"
              },
              "book_name": {
                "type": "string"
              },
              "contact_id": {
                "type": "string"
              },
              "new": {
                "type": "boolean"
              },
              "close_date": {
                "type": "string"
              },
              "number_of_students": {
                "type": "string"
              },
              "class_start_date": {
                "type": "string"
              },
              "school_id": {
                "type": "string"
              },
              "book_id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "stage_name": {
                "type": "string"
              }
            }
          }
        ],
        "responses": {
          "202": {
            "description": "opportunity updated"
          }
        }
      }
    },
    "/api/v1/schools/search": {
      "get": {
        "summary": "Return school by name using token",
        "tags": [
          "Schools"
        ],
        "consumes": [
          "application/json"
        ],
        "security": [
          {
            "apiToken": [

            ]
          }
        ],
        "parameters": [
          {
            "name": "name",
            "in": "query",
            "type": "string"
          },
          {
            "in": "header",
            "type": "string",
            "name": "Authorization",
            "required": true,
            "description": "Doorkeeper token"
          }
        ],
        "responses": {
          "200": {
            "description": "school found using partial name"
          },
          "401": {
            "description": "no token"
          }
        }
      }
    },
    "/api/v1/schools/{id}": {
      "get": {
        "summary": "Return one school using token",
        "tags": [
          "Schools"
        ],
        "consumes": [
          "application/json"
        ],
        "security": [
          {
            "apiToken": [

            ]
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "type": "string",
            "required": true
          },
          {
            "in": "header",
            "type": "string",
            "name": "Authorization",
            "required": true,
            "description": "Doorkeeper token"
          }
        ],
        "responses": {
          "200": {
            "description": "school found",
            "schema": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "int"
                },
                "salesforce_id": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "school_type": {
                  "type": "string"
                },
                "location": {
                  "type": "string"
                },
                "is_kip": {
                  "type": "boolean"
                },
                "is_child_of_kip": {
                  "type": "boolean"
                },
                "created_at": {
                  "type": "string"
                },
                "updated_at": {
                  "type": "string"
                }
              },
              "required": [
                "salesforce_id",
                "name",
                "school_type"
              ]
            }
          },
          "404": {
            "description": "school not found"
          }
        }
      }
    },
    "/api/v1/users": {
      "get": {
        "summary": "Get user info",
        "tags": [
          "Users"
        ],
        "produces": [
          "application/json"
        ],
        "security": [
          {
            "apiToken": [

            ]
          }
        ],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "schema": {
              "type": "object",
              "properties": {
                "opportunity": {
                  "type": "array"
                },
                "contact": {
                  "type": "array"
                },
                "schools": {
                  "type": "array"
                },
                "lead": {
                  "type": "array"
                },
                "subscriptions": {
                  "type": "array"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "user retrieved"
          },
          "401": {
            "description": "invalid cookie"
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "https://salesforce.openstax.org",
      "variables": {
        "defaultHost": {
          "default": "salesforce.openstax.org"
        }
      }
    }
  ],
  "securityDefinitions": {
    "apiToken": {
      "description": "OpenStax SSO Cookie needed for API Calls",
      "type": "apiKey",
      "name": "HTTP_COOKIE",
      "in": "header"
    }
  }
}